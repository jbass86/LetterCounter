{ 
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "react/jsx-uses-react": "error",   
        "react/jsx-uses-vars": "error" 
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "react"
    ]
}